  <% end %>
  <hr class="my-4">
  <%= form_for(:users, :html => {class: "form-horizontal  ", role: "form"},url: events_update_path, method: 'post') do |f| %>


  <%= submit_tag("Invite") %>

<% end %>
  
</div>
