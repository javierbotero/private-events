
<div class="jumbotron">
  <h1 class="display-4">Create New Events</h1>
</div>
<div class="row mt-5">
	<div class='col-12'>
		<%= form_for(:event, :html => {class: "form-horizontal  ", role: "form"},url: events_path, method: 'post') do |f| %>
		<div class="form-group row ">
			<div class="control-label col-sm-2">
				<%= f.label :title %>
			</div>
			<div class="col-sm-10">
				<%= f.text_field :title, class: "form-control", placeholder: "Title of Event", autofocus: true %>
			</div>
		</div>
		<div class="form-group row ">
			<div class="control-label col-sm-2">
				<%= f.label :date %>
			</div>
			<div class="col-sm-5">
				<%= f.datetime_field :date, class: "form-control", autofocus: true %>
			</div>
		</div>
		<div class="form-group row ">
			<div class="control-label col-sm-2">
				<%= f.label :description %>
			</div>
			<div class="col-sm-10">
				<%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Event Purpose" %>
			</div>
		</div>
		<div class="form-group row ">
		<div class="form-check form-check-inline card">
			<h3 class="text-info" >Invite People</h3>
		<% @users.each do |user| %>
			<span class="mx-2 mb-1 btn">
				<%= check_box_tag 'attendees[]', user.id %>
			</span> 
			<h5><%= user.username %></h5>
    <% end %>

	<%= hidden_field_tag 'attendees[]', '0' %>

	</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-2"></div>
			<div class="col-xs-3 ml-3">
				<%= f.submit class: 'btn btn-primary btn-lg' %>
			</div>
		</div>
		<% end %>

	</div>

</div>